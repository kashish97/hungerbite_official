<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_7sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="13dp"
                        android:layout_height="12dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:srcCompat="@drawable/btn_flat_normal" />


                    <TextView
                        android:id="@+id/textViewFoodname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toStartOf="@+id/buttondec"
                        android:fontFamily="@font/foodname"
                        android:singleLine="true"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:text="TextView"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                    <RelativeLayout

                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_height="32dp">

                        <Button
                            android:id="@+id/buttoncart"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="25dp"
                            android:layout_weight="1"
                            android:background="@drawable/butonborder"
                            android:fontFamily="@font/league"
                            android:text="Add"
                            android:textColor="@color/g"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/buttondec"
                            android:layout_width="31dp"
                            android:layout_height="33dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignStart="@+id/buttoncart"
                            android:background="@drawable/min"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="25dp"
                            android:layout_height="33dp"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/buttondec"
                            android:background="@color/grey"
                            android:paddingTop="3sp"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="@color/nexttoblack"
                            android:textStyle="bold"
                            android:visibility="invisible" />

                        <Button
                            android:id="@+id/buttoninc"
                            android:layout_width="31dp"
                            android:layout_height="33dp"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/textView"
                            android:background="@drawable/plu"
                            android:visibility="invisible" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_27sdp"
                        android:text="@string/rupee"
                        android:textColor="@color/black"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/textViewFpricediscou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="400"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="10dp"
                        android:text="@string/rupee"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textViewForiginal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="400"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.ms.square.android.expandabletextview.ExpandableTextView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/textViewFdescription"
                        android:layout_width="292dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_22sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:fontFamily="@font/montserrat"
                        android:singleLine="true"
                        android:textColor="@color/nexttoblack"
                        android:textSize="12sp"
                        expandableTextView:maxCollapsedLines="1"
                        expandableTextView:animDuration="200">
                    <TextView
                        android:id="@id/expandable_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/half_black" />
                    <ImageButton
                        android:id="@+id/expand_collapse"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:text="more"
                        android:src="@mipmap/ic_launcher_round"
                        android:textColor="@color/black" />
                    </com.ms.square.android.expandabletextview.ExpandableTextView>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>