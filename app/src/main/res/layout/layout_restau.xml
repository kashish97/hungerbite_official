<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="10dp"
    app:cardCornerRadius="12dp"
    android:layout_marginBottom="20dp"
    android:padding="5dp"
    android:layout_width="fill_parent"
    android:layout_marginTop="20dp"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="404dp"
        android:layout_height="85dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="91dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="66dp"
                    android:layout_height="46dp"

                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:elevation="10dp"
                    app:srcCompat="@drawable/dsc" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="11dp"
                    android:layout_weight="1"
                    android:background="@drawable/ro"
                    android:elevation="10dp"
                    android:text="     Hours to Close"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="8sp" />

                <ImageView
                    android:id="@+id/shine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/shine" />

                <ImageView
                    android:id="@+id/imageViewres"
                    android:layout_width="87dp"
                    android:layout_height="72dp"
                    android:layout_alignParentTop="true"


                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/roundimage"
                    app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />

                <TextView
                    android:id="@+id/textViewrloc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="16dp"
                    android:elevation="20dp"
                    android:fontFamily="@font/league"
                    android:text="TextView"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="238dp"
                android:layout_height="120dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textViewrname"
                    android:layout_width="199dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="84dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3sp"
                    android:text="TextView"
                    android:textColor="@color/nexttoblack"
                    android:textSize="12sp"
                    app:fontFamily="@font/montserrat" />

                <TextView
                    android:id="@+id/textViewrcity"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"

                    android:singleLine="true"
                    android:text="Ludhiana"
                    android:textColor="@color/half_black"
                    android:textSize="10sp" />


                <LinearLayout
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:paddingBottom="2sp"
                        android:paddingTop="2sp"
                        android:textSize="9sp"
                        android:text="@string/rupee"
                        android:textColor="@color/nexttoblack" />

                    <TextView
                        android:id="@+id/textViewrmin"
                        android:layout_width="216dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:paddingTop="2sp"
                        android:text="TextView"
                        android:textColor="@color/nexttoblack"
                        android:textSize="10sp"
                        app:fontFamily="@font/coustard" />

                </LinearLayout>

                <TableRow
                    android:id="@+id/hr"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="#07000000">

                </TableRow>

                <LinearLayout
                    android:id="@+id/del"
                    android:layout_width="223dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="7sp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvdelivery"
                        android:layout_width="115dp"
                        android:layout_height="18dp"
                        android:text="hello"
                        android:textColor="@color/g"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/montserrat" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        app:srcCompat="@drawable/timer" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="76dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="3sp"
                        android:text=" 45-60 Mins"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        app:fontFamily="@font/coustard" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
